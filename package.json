{
	"name": "shop",
	"version": "1.0.0",
	"description": "shop using MERN",
	"main": "server.js",
	"scripts": {
		"start": "node server",
		"server": "nodemon server ",
		"client": "cd client && npm start",
		"build": "cd client && npm install",
		"install-client": "cd client && npm install",
		"dev": "concurrently \"npm run server\" \"npm run client\"",
