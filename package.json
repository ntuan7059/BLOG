		"config": "^3.3.6",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"express-validator": "^6.12.1",
		"gravatar": "^1.8.2",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.0.5",
		"react-moment": "^1.1.1",
		"request": "^2.88.2"
	},
	"devDependencies": {
		"concurrently": "^6.2.1",
		"nodemon": "^2.0.12"
	}
